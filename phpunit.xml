<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false" colors="true" executionOrder="random" resolveDependencies="true">
<coverage>
    <report>
        <clover outputFile="var/log/clover.xml"/>
        <html outputDirectory="var/log/code-coverage" lowUpperBound="35" highLowerBound="70"/>
        <text outputFile="php://stdout" showUncoveredFiles="false" showOnlySummary="true"/>
    </report>
</coverage>

<php>
    <ini name="error_reporting" value="-1"/>
    <env name="SHELL_VERBOSITY" value="-1"/>
</php>

<testsuites>
    <testsuite name="main">
        <directory>tests</directory>
    </testsuite>
</testsuites>

<source>
    <include>
        <directory suffix=".php">./src</directory>
    </include>
    <exclude>
        <directory>./vendor</directory>
    </exclude>
</source>
</phpunit>
